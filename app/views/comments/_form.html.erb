<%= form_for([@page, @page.comments.build],:remote => true ,:html => { :id => 'comment_form'}) do |f| %>
<div class="field">
	<%= f.label :commenter_name %>
	<br />
	<%= f.text_field :commenter_name %>
</div>
<div class="field">
	<%= f.label :email_address %>
	<br />
	<%= f.text_field :email_address %>
</div>
<div class="field">
	<%= f.label :description %>
	<br />
	<%= f.text_area :description, :rows => 5, :cols => 40 %>
</div>
<div class="actions">
	<%= f.submit %>
</div>
<% end %> 