<p id="notice">
	<%= notice %>
</p>
<div id="page_div">
	<p>
		<b>Title:</b>
		<%= @page.title %>
	</p>
	<p>
		<b>Permalink:</b>
		<%= @page.permalink %>
	</p>
	<p>
		<b>Body:</b>
		<%= @page.body %>
	</p>
	<p>
		<b>Created at:</b>
		<%= @page.created_at %>
	</p>
	<p>
		<b>Updated at:</b>
		<%= @page.updated_at %>
	</p>
</div>
<hr/>
<h2>Comments</h2>
<div id="list_line_even">
	<%= render @page.comments %>
</div>
<hr/>
<h2> Add a comment: </h2>
<div class="list_line_odd">
	<%= render "comments/form" %>
</div>
<%= link_to 'Edit', edit_page_path(@page) %> |
<%= link_to 'Back', pages_path %> 